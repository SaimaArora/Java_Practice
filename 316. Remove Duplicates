import java.util.Stack;

class Solution {
    public String removeDuplicateLetters(String s) {
        int[] lastOccurrence = new int[26];
        for (int i = 0; i < s.length(); i++) {
            lastOccurrence[s.charAt(i) - 'a'] = i;
        }

        boolean[] visited = new boolean[26]; // Tracks characters in our result stack
        Stack<Character> stack = new Stack<>();

        for (int i = 0; i < s.length(); i++) {
            char c = s.charAt(i);

            // If we have already included this character, skip it.
            if (visited[c - 'a']) {
                continue;
            }

            // If the new char is smaller, pop larger chars that appear again later.
            while (!stack.isEmpty() && stack.peek() > c && lastOccurrence[stack.peek() - 'a'] > i) {
                // Mark the character as no longer in the stack
                visited[stack.peek() - 'a'] = false;
                stack.pop();
            }

            // Add the current character to the result
            stack.push(c);
            visited[c - 'a'] = true;
        }

        // Build the result string from the stack
        StringBuilder sb = new StringBuilder();
        for (Character c : stack) {
            sb.append(c);
        }
        return sb.toString();
    }
}
