class Solution {
    public int memo(String s, int ind, int[] dp) {
        if (ind == s.length()) return 1;
        if (s.charAt(ind) == '0') return 0;
        if(dp[ind] != -1) return dp[ind];
        char ch = s.charAt(ind);
        int o = memo(s, ind+1, dp);
        int t = 0;
        if(ind != s.length() - 1) {
            String two = "" + ch + s.charAt(ind+1);
            int num = Integer.parseInt(two);
            if(num <= 26) t = memo(s, ind+2, dp);
        }
        return dp[ind] = t + o;
    }
    public int recursion(String s, int ind) {
        if(ind == s.length()) return 1;
        if(s.charAt(ind) == '0') return 0;
        char ch = s.charAt(ind);
        int o = recursion(s, ind + 1);
        int t = 0;
        if (ind != s.length() - 1) {
            String two = "" + ch + s.charAt(ind+1);
            int num = Integer.parseInt(two);
            if(num <= 26) {
                t = recursion(s, ind + 2);
            }
        }
        return o + t;
    }
    public int numDecodings(String s) {
        int[] dp = new int[s.length()];
        Arrays.fill(dp, -1);
        return memo(s, 0, dp);
    }
}
