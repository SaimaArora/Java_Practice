class Solution {
    public int numSubarrayProductLessThanK(int[] nums, int k) {
        if(k<=1) return 0;
        int prod = 1, left = 0,right = 0, n = nums.length, count = 0;
        while(right<n) {
            prod*=nums[right];
            while(prod>=k){
                prod/=nums[left];
                left++;
            }
            count= count+1+(right-left);
            right++;
        }
        return count;
    }
}
