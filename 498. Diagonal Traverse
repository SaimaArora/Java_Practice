class Solution {
    public int[] findDiagonalOrder(int[][] mat) {
       if (mat == null || mat.length == 0) return new int[0];
        int col=mat[0].length,row=mat.length;
        int last=col*row;
        int[] result=new int[col*row];
        boolean reverse=true;
        int r=0,c=0,i=0;
        while(i<last) {
            result[i]=mat[r][c];
            if((r+c)%2==0){
                if(c==col-1) r++;
                else if(r==0)c++;
                else{
                    r--;
                    c++;
                }
            }
            else{
                if(r==row-1) c++;
                else if(c==0) r++;
                else{
                    r++;
                    c--;
                }
            }
            i++;
        }
        return result;
    }
}
