class Solution {
    public int findNumberOfLIS(int[] nums) {
        int n = nums.length, max = 1;
        int[] dp = new int[n];
        Arrays.fill(dp,1);
        int[] count = new int[n];
        Arrays.fill(count,1);
        for(int ind = 0; ind < n; ind++){
            for(int prev = 0; prev < ind; prev++){
                if(nums[prev]<nums[ind]){
                    if(dp[prev]+1 > dp[ind]){
                        dp[ind] = dp[prev]+1;
                        count[ind] = count[prev];
                    }
                    else if(dp[prev]+1 == dp[ind]) count[ind]+=count[prev];
                }
            }
            if(dp[ind] > max){
                max = dp[ind];
            }
        }
        int ans = 0;
        for(int i=0;i<n;i++){
            if(max==dp[i]) ans+=count[i];
        }
        return ans;
    }
}
