class Solution {
    public int longestBalanced(String s) {
        int maxLen = 0, n = s.length();
        for (int i = 0; i < n; i++) {
            int[] freq = new int[26];
            for (int j = i; j < n; j++) {
                freq[s.charAt(j) - 'a']++;
                int f = -1;
                boolean flag = true;
                for (int k = 0; k < 26; k++) {
                    if(f == -1 && freq[k] > 0) f = freq[k];
                    if(f != -1 &&  freq[k] > 0 && freq[k] != f) {
                        flag = false;
                        break;
                    }
                }
                if(flag) {
                    maxLen = Math.max(maxLen, j - i+1);
                }
            }
            
        }
        return maxLen;
    }
}
