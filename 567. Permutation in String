class Solution {
    public boolean checkInclusion(String s1, String s2) {
        int n = s1.length(), m = s2.length();
        int[] check = new int[26];
        int[] count = new int[26];
        if(n > m) return false;
        for(int i = 0; i < n; i++) {
            count[s1.charAt(i) - 'a']++;
            check[s2.charAt(i) - 'a']++;
        }
        if (Arrays.equals(check, count)) return true;
        int end = n;
        for (int j = 0; j < m - n; j++) {
            check[s2.charAt(j) - 'a']--;
            check[s2.charAt(end++) - 'a']++;
            if(Arrays.equals(check, count)) return true;
        }
        return false;
    }
}
