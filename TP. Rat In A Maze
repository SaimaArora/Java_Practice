class Result {
    private static boolean isSafe(int i, int j, int[][] maze, int n) {
        return i >= 0 && j >= 0 && i < n && j < n && maze[i][j] == 0; 
    }
    private static int recursion(int i, int j, int[][] maze, int n) {
        if (i == n - 1 && j == n - 1) {
            return 1;
        }
        int right, down;
        if(isSafe(i, j, maze, n)){
            right = recursion(i, j+1, maze, n);
            down = recursion(i+1, j, maze, n);
        }
        else return 0;
        return right+down;
    }
  public static int solveMaze(int maze[][], int size) {
      return recursion(0, 0, maze, size);
  }
}
