/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    private void inorder(List<Integer> arr, TreeNode root) {
        if(root == null) return;
        inorder(arr, root.left);
        arr.add(root.val);
        inorder(arr, root.right);
    }
    private TreeNode constructBST(int st, int end, List<Integer> arr) {
        if(st > end) return null;
        int mid = (st + end) / 2;
        TreeNode root = new TreeNode(arr.get(mid));
        root.left =  constructBST(st, mid - 1, arr);
        root.right = constructBST(mid+1, end, arr);
        return root;
    }
    public TreeNode balanceBST(TreeNode root) {
        List<Integer> arr = new ArrayList<>();
        inorder(arr, root);
        return constructBST(0, arr.size() - 1, arr); 
    }
}
