public boolean dfsTopo(int ind, int[] path, Stack<Integer> st, int[][] graph, int[] visited) {
        visited[ind] = 1;
        path[ind] = 1;
        for(int i = 0; i < graph[ind].length;i++) {
            int neigh = graph[ind][i];
            if(visited[neigh] == 0) {
                if (dfsTopo(neigh, path, st, graph, visited == false) return false;
            }
            else if (path[neigh] == 1) return false;
        }

        path[ind] = 0;
        st.push(ind);
        return true;
    }

    public int[] topologicalSort(int[][] graph) {
        Stack<Integer> st = new Stack<>();
        int[] visited = new int[graph.length];
        int[] path = new int[graph.length];
        for(int i = 0; i < graph.length; i++) {
            if (visited[i] == 0) {
                if (!dfsTopo(i, path, st, graph, visited)) return new int[0];
            }
        }
        int index = 0;
        int[] ans = new int[graph.length];
        while(!st.isEmpty()) {
            ans[index++] = st.pop();
        }
        return ans;
    }
