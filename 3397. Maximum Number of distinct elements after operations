class Solution {
    public int maxDistinctElements(int[] nums, int k) {
        Arrays.sort(nums);
        int distinct = 0, last_num = Integer.MIN_VALUE;
        for(int i = 0; i < nums.length; i++) {
            int ele = nums[i];
            int lower = ele-k, upper = ele+k;
            int target = Math.max(last_num+1, lower);
            if(target <= upper){ distinct++;
            last_num = target;}
        }
        return distinct;
    }
}
