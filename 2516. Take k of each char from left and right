public int takeCharacters(String s, int k) {
        int totalA=0,totalB=0,totalC=0;
        int n=s.length();
        for(int i=0;i<n;i++){
            if(s.charAt(i)=='a') totalA++;
            if(s.charAt(i)=='b') totalB++;
            if(s.charAt(i)=='c') totalC++;
        }
        if(totalA < k || totalB < k || totalC < k){
            return -1;
        }
        int l=0,r=0,a=0,b=0,c=0,maxLen=0;
        while(r<n){
            char ch=s.charAt(r);
            if(ch=='a') a++;
            if(ch=='b') b++;
            if(ch=='c') c++;

            while(a>totalA-k || b>totalB-k || c>totalC-k){
                char chl=s.charAt(l);
                if(chl=='a') a--;
                if(chl=='b') b--;
                if(chl=='c') c--;
                l++;
            }
            maxLen=Math.max(maxLen,r-l+1);
            r++;
        }
        return s.length()-maxLen;
    }
