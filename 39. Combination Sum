class Solution {
    public void pickOrNotPick(int ind, int sum, List<Integer> arr, List<List<Integer>> result, int[] candidates, int target){
        if (sum > target) return;
        if (sum == target){
            result.add(new ArrayList<>(arr));
            return;
        }
        if (ind == candidates.length) return;
        if (sum + candidates[ind] <= target) {
            sum+=candidates[ind];
            arr.add(candidates[ind]);
            pickOrNotPick(ind, sum, arr, result, candidates, target);
            sum-= candidates[ind];
            arr.remove(arr.size() - 1);
        }
        pickOrNotPick(ind+1, sum, arr, result, candidates, target);
    }
    public List<List<Integer>> combinationSum(int[] candidates, int target) {
        List<List<Integer>> result = new ArrayList<>();
        pickOrNotPick(0, 0, new ArrayList<Integer>(), result, candidates, target);
        return result;
    }
}
