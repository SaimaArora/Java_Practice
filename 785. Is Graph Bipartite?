class Solution {

    private boolean dfs(int ind, int color, int[] colors, int[][] graph) {
        colors[ind] = color;
        for(int i = 0; i < graph[ind].length; i++) {
            if(colors[graph[ind][i]] == 0) {
                if (!dfs(graph[ind][i], -color, colors, graph)) return false;
            }
            else if(colors[graph[ind][i]] == color) {
                return false;
            }
        }
        return true;
    }
    public boolean isBipartite(int[][] graph) {
        int[] colors = new int[graph.length];
        for(int i = 0; i < graph.length; i++) {
            if(colors[i] == 0) {
                if(!dfs(i, 1, colors, graph)) {
                    return false;
                }
            }
        }
        return true;
    }
}
