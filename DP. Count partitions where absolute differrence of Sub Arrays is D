
    public int recurCountPartitions(int currSum, int ind, int[] arr) {
        if(currSum == 0) return 1;
        if(ind == 0){
            if(currSum == arr[0]) return 1;
            return 0;
        }
        int notTake = recurCountPartitions(currSum, ind - 1, arr);
        int take = 0;
        if(arr[ind] <= currSum) take = recurCountPartitions(currSum - arr[ind], ind - 1, arr);
        return take+notTake;
    }
    
    public int countPartitions(int[] arr, int d) {
        int total = 0;
        for(int num : arr) total+=num;
        if(((d+total) % 2 != 0 )|| d > total) return 0;
        int sum = (d+total)/2;
        return recurCountPartitions(sum, arr.length - 1, arr);
    }
