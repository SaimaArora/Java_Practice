class Solution {
    public void recursion(int[] num, Set<List<Integer>> ans, List<Integer> temp, boolean[] used) {
        if (temp.size() == num.length) {
            ans.add(new ArrayList<>(temp));
            return;
        }
        for (int i = 0; i < num.length; i++) {
            if (used[i]) continue;
            used[i] = true;
            temp.add(num[i]);
            recursion(num, ans, temp, used);
            used[i] = false;
            temp.remove(temp.size() - 1);
        }
    }

    public List<List<Integer>> permuteUnique(int[] nums) {
        Set<List<Integer>> answer = new HashSet<>();
        recursion(nums, answer, new ArrayList<>(), new boolean[nums.length]);
        return new ArrayList<>(answer);
    }
}
