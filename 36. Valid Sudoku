class Solution {
    public boolean isValidSudoku(char[][] board) {
        Set<Character>[] rows=new HashSet[9];
        Set<Character>[] cols=new HashSet[9];
        Set<Character>[] boxes=new HashSet[9];
        int r=board.length,c=board[0].length;

        for(int i=0;i<9;i++){
            rows[i]=new HashSet<>();
            cols[i]=new HashSet<>();
            boxes[i]=new HashSet<>();
        }

        for(int i=0;i<r;i++){    
            for(int j=0;j<c;j++){
                char ch=board[i][j];
                int box_idx=(i/3)*3+(j/3);
                if(ch=='.') continue;
                if(!rows[i].add(ch) || !cols[j].add(ch) || !boxes[box_idx].add(ch)){
                    return false;
                }
            }
        }
        return true;
    }
}
