class Solution {

    public int recursive(int[] energy, int n, int k, int ind, int[] dp) {
        if(ind>=n) return 0;
        if(dp[ind]!=Integer.MIN_VALUE) return dp[ind];
         dp[ind] = energy[ind] + recursive(energy, n, k, ind+k, dp);
         return dp[ind];
    }

    public int maximumEnergy(int[] energy, int k) {
        int max = Integer.MIN_VALUE, n = energy.length;
        int[] dp = new int[n];
        Arrays.fill(dp, Integer.MIN_VALUE);
        for(int i = 0;i < n; i++) {
            int curr = recursive(energy, energy.length, k, i, dp);
            if(max<curr){
                max = curr;
            }
        }
        return max;
    }
}
