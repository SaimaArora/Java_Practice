class Solution {
    public int myAtoi(String s) {
        int sign = 1, i = 0;
        s = s.trim();
        int n = s.length();
        if(n == 0) return 0;
        long res = 0;
        
        if(s.charAt(i) == '+') i++;
        else if (s.charAt(i) == '-') {
            sign = -1;
            i++;
        }
        
        while(i < n) {
            char ch = s.charAt(i);
            if (ch <'0' || ch > '9') break;
            res = res * 10 + (ch-'0');
            if (sign * res > Integer.MAX_VALUE) return Integer.MAX_VALUE;
            else if (sign * res < Integer.MIN_VALUE) return Integer.MIN_VALUE;
            i++;
        }
        return (int)res*sign;
    }
}
