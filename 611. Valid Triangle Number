class Solution {
    public int triangleNumber(int[] nums) {
        Arrays.sort(nums);
        int count=0;
        for(int k=nums.length-1;k>=2;k--){
            int a=0,b=k-1;
            while(a<b){
                if(nums[a]+nums[b]>nums[k]){
                    count+=b-a; b--;
                }
                else a++;
            }
        }
        return count;
       
    }
}
