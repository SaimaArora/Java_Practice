class Solution {

    public int recursive(List<List<Integer>> tri, int i,int j, int len,int last){
        if(i==len-1) return tri.get(i).get(j);
        int curr=tri.get(i).get(j);
        int down=curr+recursive(tri,i+1,j,len,last);
        int diag=curr+recursive(tri,i+1,j+1,len,last);
        return Math.min(down,diag);
    }

    public int memoized(List<List<Integer>> tri,List<List<Integer>> dp,int i,int j,int len,int last){
        if(i==len-1) return tri.get(i).get(j);
        if(dp.get(i).get(j)!=-1){
            return dp.get(i).get(j);
        }
        int curr=tri.get(i).get(j);
        int down=memoized(tri,dp,i+1,j,len,last);
        int diag=memoized(tri,dp,i+1,j+1,len,last);
        int min=curr+Math.min(down,diag);
        dp.get(i).set(j,min);
        return min;
    }

    public int tabulation(List<List<Integer>> tri,int len,int last){

        int[][] dp = new int[len][];
        for (int i = 0; i < len; i++) {
            dp[i] = new int[tri.get(i).size()];
        }
        for (int j = 0; j < tri.get(len - 1).size(); j++) {
            dp[len - 1][j] = tri.get(len - 1).get(j);
        }

        for(int i=len-2;i>=0;i--){
            int n=tri.get(i).size();
            for(int j=0;j<n;j++){
                int min=Math.min(dp[i+1][j],dp[i+1][j+1]);
                dp[i][j]=tri.get(i).get(j)+min;
            }
        }
        return dp[0][0];
    }

    public int minimumTotal(List<List<Integer>> triangle) {
        int m=triangle.size(),n=triangle.get(m-1).size();
        // List<List<Integer>> dp=new ArrayList<>();
        // for(int i=0;i<m;i++){
        //     List<Integer> row=new ArrayList<>();
        //     int r=triangle.get(i).size();
        //     for(int j=0;j<r;j++){
        //         row.add(-1);
        //     }
        //     dp.add(row);
        // }
        return tabulation(triangle,m,n);
        // return memoized(triangle,dp,0,0,m,n);
        // return recursive(triangle,0,0,m,n);
    }
}
