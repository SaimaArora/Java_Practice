class Solution {
    public int countSquares(int[][] matrix) {
        int m = matrix.length, n = matrix[0].length, ans = 0;
        for (int row = 1; row < m; row++) {
            for (int col = 1; col < n; col++){
                if(matrix[row][col] == 1){
                    int up = matrix[row - 1][col], diag = matrix[row - 1][col - 1], side = matrix[row][col - 1];
                    matrix[row][col] += Math.min(up, Math.min(diag, side));
                }
            }
        }
        for(int i = 0; i < m; i++){
            for(int j = 0; j < n; j++){
                ans+=matrix[i][j];
            }
        }
        return ans;

    }
}
