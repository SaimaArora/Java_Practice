public class Solution {
    public ListNode checkStartingOfLoop(ListNode start,ListNode inCycle){
        while(start!=inCycle){
            start=start.next;
            inCycle=inCycle.next;
        }
        return start;
    }
    public ListNode detectCycle(ListNode head) {
        if(head==null) return null;
        ListNode slow=head,fast=head;
        while(fast.next!=null && fast.next.next!=null){
            slow=slow.next;
            fast=fast.next.next;
            if(slow==fast){
                return checkStartingOfLoop(head,slow);
            }
        }
        return null;

    }
}
