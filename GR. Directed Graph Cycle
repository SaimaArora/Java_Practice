    private boolean check(int ind, int[][] gr, int[] path, int[] visited) {
        visited[ind] = 1;
        path[ind] = 1;
        for (int neigh : gr[ind]) {
            if (visited[neigh] == 0) {
                if (check(neigh, gr, path, visited)) return true; 
            }
            else if (path[neigh] == 1) {
                return true;
            }
        }
        path[ind] = 0;
        return false;
    }

    public boolean directedCycle(int[][] graph) {
        int n = graph.length;
        int [] visited = new int[n];
        int[] path = new int[n];

        for(int i = 0; i < n; i++) {
            if (visited[i] == 0) {
                if (check(i, graph, path, visited)) return true;
            }
        }
        return false;
    }
