class Solution {
    public int maxProduct(int[] nums) {
        int Min = nums[0], Max = nums[0], ans = nums[0];
        for (int i = 1; i < nums.length; i++) {
            if(nums[i] < 0) {
                int temp = Max;
                Max = Min;
                Min = temp;
            }
            Max = Math.max(nums[i], Max * nums[i]);
            Min = Math.min(nums[i], Min * nums[i]);
            ans = Math.max(Max, ans);
        }
        return ans;
    }
}
