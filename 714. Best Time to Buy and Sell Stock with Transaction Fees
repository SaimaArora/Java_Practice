class Solution {
    
    public int recursion(int[] prices,int buy,int index,int transFee){
        if(index==prices.length) return 0;
        if(buy==1){
            return Math.max(-prices[index]+recursion(prices,0,index+1,transFee),0+recursion(prices,1,index+1,transFee));
        }
        else{
            return Math.max(prices[index]-transFee+recursion(prices,1,index+1,transFee),0+recursion(prices,0,index+1,transFee));
        }
    }

    public int memo(int[] prices,int buy, int index, int fee, int[][] dp){
        if (index == prices.length) return 0;
        if(dp[index][buy] != -1) return dp[index][buy];
        if (buy == 1) {
            return dp[index][buy]=Math.max(-prices[index] + memo(prices, 0, index + 1, fee, dp), 0 + memo(prices, 1, index + 1, fee, dp));
        }
        else{
            return dp[index][buy]=Math.max(prices[index] - fee + memo(prices, 1, index + 1, fee, dp), 0 + memo(prices, 0, index + 1, fee, dp));
        }
    }

    public int tabulation(int[] prices,int fee){
        int n=prices.length;
        int[][] dp=new int [n+1][2];
        for(int index=n-1;index>=0;index--){
            for(int buy=1; buy>=0;buy--){
                if (buy == 1) {
                    dp[index][buy]=Math.max(-prices[index] + dp[index+1][0], 0 + dp[index+1][1]);
                }
                else{
                    dp[index][buy] = Math.max(prices[index] - fee + dp[index+1][1], 0 + dp[index+1][0]);
                }
            }
        }
        return dp[0][1];
    }

    public int maxProfit(int[] prices, int fee) {
        // int n=prices.length;
        // int[][] dp=new int[n][2];
        // for(int [] row: dp) {
        //     Arrays.fill(row,-1);
        // }
        // return memo(prices,1,0,fee,dp);
        // return recursion(prices,1,0,fee);
        return tabulation(prices,fee);
    }
}
