class Solution {
    public int findLucky(int[] arr) {
        Arrays.sort(arr);
        int ans=-1,i=arr.length-1;
        while(i>=0){
            int count=1;
            int curr=arr[i];
            while(i>0 && arr[i]==arr[i-1]){
                count++;
                i--;
            }
            if(count==curr){
                ans=count;
                break;
            }
            i--;
        }
        return ans;
    }
}
