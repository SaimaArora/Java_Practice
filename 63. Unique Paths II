class Solution {
    public int recursive(int[][] obstacles,int i,int j,int m,int n){
        if(i>=m || j>=n || obstacles[i][j]==1) return 0;
        if(i==0 && j==0){
            return 1;
        }
        if(i<0 || j<0) return 0;
        int up=recursive(obstacles,i-1,j,m,n);
        int left=recursive(obstacles,i,j-1,m,n);
        return up+left;
    }

    public int memoized(int[][] obstacles,int[][] dp,int i,int j, int m,int n){
        if(i>=0 && j>=0 && obstacles[i][j]==1) return 0;
        if(i==0 && j==0) return 1;
        if(i<0 || j<0) return 0;
        if(dp[i][j]!=-1) return dp[i][j];
        int up = memoized(obstacles,dp,i-1,j,m,n);
        int down = memoized(obstacles,dp,i,j-1,m,n);
        return dp[i][j]=up+down;
    }

    public int tabulation(int[][] obstacles,int m,int n){
        int [][] dp=new int[m][n];

        for(int i=0;i<m;i++){
            for(int j=0;j<n;j++){
                if(obstacles[i][j]==1) dp[i][j]=0;
                else if(i==0 && j==0) dp[i][j]=1;
                else{
                    int up=0,left=0;
                    if(i>0) up=dp[i-1][j];
                    if(j>0) left=dp[i][j-1];
                    dp[i][j]=up+left;
                }
            }
        }
        return dp[m-1][n-1];
    }

    public int uniquePathsWithObstacles(int[][] obstacleGrid) {
        int m=obstacleGrid.length,n=obstacleGrid[0].length;
        if(obstacleGrid[0][0]==1 || obstacleGrid[m-1][n-1]==1) return 0;
        int[][] dp=new int[m][n];
        for(int[] row:dp){
            Arrays.fill(row,-1);
        }
        return tabulation(obstacleGrid,m,n);
        // return memoized(obstacleGrid,dp,m-1,n-1,m,n);
        // recursive(obstacleGrid,i,j);
    }
}
