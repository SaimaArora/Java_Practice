class Solution {
    public int recursion(int[] coins, int amt, int ind, int[][] dp) {
        if(amt == 0) return 0;
        if (ind == coins.length - 1) {
            if (amt % coins[ind] == 0) {
                return amt/coins[ind];
            }
            return 1000000000;
        }
        if(dp[ind][amt] != -1) return dp[ind][amt];
        int pick = 1000000000;
        if(amt >= coins[ind]) pick = 1 + recursion(coins, amt - coins[ind], ind, dp);
        int notPick = recursion(coins, amt, ind+1, dp);
        return dp[ind][amt] = Math.min(pick, notPick);
    }
    public int coinChange(int[] coins, int amount) {
        int n = coins.length;
        int[][] dp = new int[n][amount+1];
        for(int[] i : dp) {
            Arrays.fill(i, -1);
        }
        int ans = recursion(coins, amount, 0, dp);
        return  ans == 1000000000 ? -1 : ans;
        
    }
}
