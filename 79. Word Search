class Solution {

    private boolean isValid(int r, int c, boolean[][] visited, char[][] board, char ch) {
        return r < board.length && c < board[0].length && r >= 0 && c >= 0 && !visited[r][c] && board[r][c] == ch;
    }

    public boolean checkLetters(int i, int j, boolean[][] visited, char[][] board, String word, int ind ) {
        if (ind == word.length()) return true;
        if (!isValid(i, j, visited, board, word.charAt(ind))) {
            return false;
        }
        visited[i][j] = true;
        boolean checkDir = checkLetters(i+1,j,visited,board, word, ind+1) ||
                            checkLetters(i,j+1,visited,board, word, ind+1) ||
                            checkLetters(i-1,j,visited,board, word, ind+1) ||
                            checkLetters(i,j-1,visited,board, word, ind+1);
        visited[i][j] = false;
        return checkDir;
    }
    public boolean exist(char[][] board, String word) {
        boolean visited[][] = new boolean[board.length][board[0].length];
        boolean ans = false;
        for(int i = 0; i < board.length; i++) {
            for(int j = 0; j < board[0].length; j++) {
                if(word.charAt(0) == board[i][j])
                ans = checkLetters(i, j,visited,board,word,0);
                if(ans) return true;
            }
        }
        return false;
    }
}
