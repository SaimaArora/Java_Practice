class Solution {

    public void checkForSum(int k, int n, int currSum, int start, List<Integer> temp, List<List<Integer>> result) {
        if ( currSum == n && k == 0) {
            result.add(new ArrayList<>(temp));
            return;
        }
        else if (currSum >= n || k <= 0){
            return;
        }
        for (int i = start; i <= 9; i++) {
            temp.add(i);
            checkForSum(k - 1, n, currSum + i, i + 1, temp, result);
            temp.remove(temp.size() - 1);
        }
    }

    public List<List<Integer>> combinationSum3(int k, int n) {
        List<List<Integer>> result = new ArrayList<>();
        checkForSum(k, n, 0, 1, new ArrayList<>(), result);
        return result;
    }
}
