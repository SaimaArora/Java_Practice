class Solution {
    public int maxArea(int[] h) {
        int n=h.length;
        int l=0,r=n-1,max=0;
        while(l<r){
            int min=Math.min(h[l],h[r]);
            int wid=r-l;
            int val=wid*min;
            if(val>max){
                max=val;
            }
            if(min==h[l]){
                l++;
            }
            else{
                r--;
            }
        }
        return max;
    }
}
