class Solution {
    public String convert(String s, int num) {
        if(num==1) return s;
        StringBuilder ans=new StringBuilder();
        StringBuilder[] list=new StringBuilder[num];
        boolean reverse=false;
        for(int i=0;i<num;i++){
            list[i]=new StringBuilder();
        }
        int row=0;
        for(char ch:s.toCharArray()){
            list[row].append(ch);
            row+=reverse?-1:1;
            if(row==num-1 || row==0){
                reverse=!reverse;
            }
        }
        for(int i=0;i<num;i++){
            ans.append(list[i]);
        }
        return ans.toString();
    }
}
