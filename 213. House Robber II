class Solution {
    public int recursion(int[] nums, int ind, int end, int[] memo) {
        if(end < ind) return 0;
        if(end == ind) return nums[end];
        if (memo[ind] != -1) return memo[ind];
        int take = nums[ind] + recursion(nums, ind+2, end, memo);
        int notTake = recursion(nums, ind+ 1, end, memo);
        return memo[ind] = Math.max(take, notTake);
    }
    public int rob(int[] nums) {
        int n = nums.length;
        if(n == 1) return nums[0];
        int[] memo1 = new int[n];
        Arrays.fill(memo1, -1);
        int[] memo2 = new int[n];
        Arrays.fill(memo2, -1);
        return Math.max(recursion(nums, 0, n - 2, memo1), recursion(nums, 1, n - 1, memo2));
    }
}
