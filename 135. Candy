class Solution {
    public int candy(int[] rate) {
        int n=rate.length,ans=0;
        int[] candies=new int[n];
        for(int i=0;i<n;i++){
            candies[i]=1;
        }
        for(int i=1;i<n;i++){
            if(rate[i-1]<rate[i]){
                candies[i]=candies[i-1]+1;
            }
        }
        for(int i=n-1;i>0;i--){
            if(rate[i-1]>rate[i]){
                candies[i-1]=Math.max(candies[i]+1,candies[i-1]);
            }
            ans+=candies[i];
        }
        ans+=candies[0];
        return ans;
    }
}
