/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    List<List<Integer>> answers = new ArrayList<>();
    public void recursion(List<Integer>ans, TreeNode root, int remaining) {
        remaining-=root.val;
        ans.add(root.val);
        if(root.left == null && root.right == null) {
            if(remaining == 0) {
                answers.add(new ArrayList(ans));
            }
            
        }
        else{
            if(root.left != null)recursion(ans, root.left, remaining);
            if(root.right != null)recursion(ans, root.right, remaining);
        
        }
        ans.remove(ans.size() - 1);
    }

    public List<List<Integer>> pathSum(TreeNode root, int targetSum) {
        List<Integer> answer = new ArrayList<>(); 
        if(root != null)recursion(answer, root, targetSum);
        return answers;
    }
}
