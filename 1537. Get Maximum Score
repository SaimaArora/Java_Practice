class Solution {

    public int maxSum(int[] arr1, int[] arr2) {
        long ans = 0, sum1 = 0l, sum2 = 0l;
        int i = 0, j = 0;
        while(i < arr1.length && j < arr2.length) {
            if(arr1[i] < arr2[j]) {
                sum1+=arr1[i++];
                continue;
            }
            else if(arr2[j] < arr1[i]) {
                sum2+=arr2[j++];
            }
            else if(arr1[i] == arr2[j]) {
                long maxSum = Math.max(sum1, sum2) + arr1[i];
                ans += maxSum;
                i++; j++; sum1 = 0; sum2 = 0;
            }
        }
        for(int l = j; l < arr2.length; l++) {
            sum2+=arr2[l];
        }
        for(int l = i; l < arr1.length; l++) {
            sum1+=arr1[l];
        }
        ans+= Math.max(sum1, sum2);
        return (int)(ans% 1000000007);
    }
}
