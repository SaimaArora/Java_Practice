class Solution {

    public boolean isSafe(int ind, int[][] graph, int[] visited) {
        //visited again
        if (visited[ind] == 1) return false;
        //if already safe
        if(visited[ind] == 2) return true;

        visited[ind] = 1; //mark as visited
        for (int i = 0; i < graph[ind].length;i++) {
            if(!isSafe(graph[ind][i], graph, visited)) {
                return false;
            }
        }
        visited[ind] = 2;
        return true;

    }

    public List<Integer> eventualSafeNodes(int[][] graph) {
        int n = graph.length;
        int[] visited = new int[n];
        for (int i = 0; i < n; i++) {
            isSafe(i, graph, visited);
        }
        List<Integer> ans = new ArrayList<>();
        for(int i = 0; i < n; i++) {
            if(visited[i] == 2) {
                ans.add(i);
            }
        }
        return ans;
    }
}
