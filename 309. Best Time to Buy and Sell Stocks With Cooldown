class Solution {

    public int recursion(int[] prices,int buy,int index){
        if(index>=prices.length) return 0;
        if(buy == 1){
            return Math.max(-prices[index]+recursion(prices,0,index+1),0+recursion(prices,1,index+1));
        }
        else{
            return Math.max(prices[index]+recursion(prices,1,index+2),0+recursion(prices,0,index+1));
        }
    }

    public int memo(int[] prices,int buy,int index,int[][] dp){
        if(index>=prices.length) return 0;
        if(dp[index][buy]!=-1) return dp[index][buy];
        if(buy==1){
            return dp[index][buy]=Math.max(-prices[index]+memo(prices,0,index+1,dp),0+memo(prices,1,index+1,dp));
        } else {
            return dp[index][buy]=Math.max(prices[index]+memo(prices,1,index+2,dp), 0+memo(prices,0,index+1,dp));
        }
    }

    public int tabulation(int[] prices) {
        int n = prices.length;
        int[][] dp = new int[n+2][2];
        for(int index = n-1 ; index >= 0; index--){
            for(int buy = 1;buy>=0;buy--){
                if(buy == 1){
                    dp[index][buy] = Math.max(-prices[index] + dp[index+1][0], 0 + dp[index+1][1]);
                }
                else{
                    dp[index][buy] = Math.max(prices[index] + dp[index+2][1],  0 + dp[index+1][0]);
                }
            }
        }
        return dp[0][1];
    }

    public int maxProfit(int[] prices) {
        // int n=prices.length;
        // int[][] dp=new int[n][2];
        // for(int[] row: dp){
        //     Arrays.fill(row,-1);
        // }
        // return memo(prices,1,0,dp);
        // return recursion(prices,1,0);
        return tabulation(prices);
    }
}
