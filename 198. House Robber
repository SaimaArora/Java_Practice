class Solution {
    public int tabulation(int[] nums) {
        int n = nums.length;
        int[] dp = new int[n];
        dp[0] = nums[0];
        for(int i = 1; i < n; i++) {
            int pick = nums[i];
            if(i > 1) pick += dp[i - 2];
            int notPick = dp[i - 1];
            dp[i] = Math.max(pick, notPick);
        }
        return dp[n - 1];
    }
    public int memo(int[] nums, int idx, int[] dp) {
        if(idx < 0) return 0;
        if (idx == 0) return nums[0];
        if (dp[idx] != -1) return dp[idx];
        int pick = nums[idx] + memo(nums, idx - 2, dp);
        int notPick = memo(nums, idx - 1, dp);
        return dp[idx] = Math.max(pick, notPick);
    }
    public int rob(int[] nums) {
        // int n = nums.length;
        // int[] dp = new int[n];
        // Arrays.fill(dp, -1);
        // memo(nums, n - 1, dp);
        // return dp[n - 1] == -1? 0 : dp[n - 1];
        return tabulation(nums);
    }
}
