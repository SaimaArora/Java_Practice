class Solution {

    private void dfs(int r, int c, int prev, int[][] heights, boolean[][] visited) {
        if(r < 0 || c < 0 || r >= heights.length || c >= heights[0].length || visited[r][c]) {
            return;
        }
        if (heights[r][c] < prev) return;
        visited[r][c] = true;
        int[] rows = {0, 0, 1, -1};
        int[] cols = {1, -1, 0, 0};
        for (int i = 0; i < 4; i++) {
            int nr = r + rows[i], nc = c + cols[i];
            dfs(nr, nc, heights[r][c], heights, visited);
        }
    }
    public List<List<Integer>> pacificAtlantic(int[][] heights) {
        int m = heights.length, n = heights[0].length;
        boolean[][] pacific = new boolean[m][n];
        boolean[][] atlantic = new boolean[m][n];
        for(int i = 0; i < n; i++) {
            dfs(0, i, Integer.MIN_VALUE, heights, pacific);
            dfs(m - 1,  i, Integer.MIN_VALUE, heights, atlantic);
        }
        for (int j = 0; j < m; j++) {
            dfs(j, 0, Integer.MIN_VALUE, heights, pacific);
            dfs(j, n - 1, Integer.MIN_VALUE, heights, atlantic);
        }
        List<List<Integer>> result = new ArrayList<>();
        for(int i = 0; i < m; i++){
            for (int j = 0; j < n; j++) {
                if(pacific[i][j] && atlantic[i][j]) result.add(Arrays.asList(i, j));
            }
        }
        return result;
    }
}
