class Solution {
    public String makeFancyString(String s) {
        StringBuilder str=new StringBuilder();
        int n=s.length(),count=1;
        char lst=s.charAt(0);
        str.append(s.charAt(0));
        for(int i=1;i<n;i++){
             if(s.charAt(i)!=lst){
                lst=s.charAt(i);
                count=0;
            }
            if(++count>2)continue;
            str.append(s.charAt(i));
        }
           
        
        return str.toString();
    }
}
