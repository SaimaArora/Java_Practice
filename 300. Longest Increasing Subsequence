class Solution {

    public int recursion(int[] nums,int ind,int prev){
        if(ind == nums.length) return 0;
        int notTake = 0 + recursion(nums,ind+1,prev);
        int take=0;
        if(prev==-1 || nums[ind]>nums[prev]){
            take = 1 + recursion(nums,ind+1,ind);
        }
        return Math.max(notTake,take);
    }

    public int memo(int[] nums, int ind, int prev, int[][] dp) {
        if(ind == nums.length) return 0;
        if(dp[ind][prev+1] != -1) return dp[ind][prev+1];
        int notTake = 0 + memo(nums,ind+1,prev,dp);
        int take=0;
        if(prev==-1 || nums[ind]>nums[prev]){
            take = 1 + memo(nums, ind+1, ind, dp);
        }
        return dp[ind][prev+1] = Math.max(take,notTake);
    }

    public int lengthOfLIS(int[] nums) {
        int[][] dp=new int [nums.length][nums.length+1];
        for(int [] rows: dp){
            Arrays.fill(rows,-1);
        }
        return memo(nums,0,-1,dp);
        // return recursion(nums,0,-1);
    }
}
