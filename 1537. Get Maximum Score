class Solution {

    private void recursion(int i, int j, long sum1, long sum2, long[] ans, int[] arr1, int[] arr2) {
        if(i == arr1.length || j == arr2.length) {
            for(int l = j; l < arr2.length; l++) {
                sum2+=arr2[l];
            }
            for(int l = i; l < arr1.length; l++) {
                sum1+=arr1[l];
            }
            ans[0]+= Math.max(sum1, sum2);
            return;
        }
        if(arr1[i] < arr2[j]) {
            recursion(i+1, j, sum1+arr1[i], sum2, ans, arr1, arr2);
        }
        if(arr2[j] < arr1[i]) {
            recursion(i, j+1, sum1, sum2 + arr2[j], ans, arr1, arr2);
        }
        if(arr1[i] == arr2[j]) {
            long maxSum = Math.max(sum1, sum2) + arr1[i];
            ans[0] += maxSum;
            recursion(i+1, j+1, 0, 0, ans, arr1, arr2);
        }
    }
    public int maxSum(int[] num1, int[] num2) {
        long[] ans = new long[1];
        recursion(0, 0, 0l, 0l, ans, num1, num2);
        return (int)(ans[0] % 1000000007);
    }
}
